{
    "name": "vscode-keyboard-shortcuts",
    "displayName": "DPD VKS",
    "description": "",
    "keywords": [],
    "version": "0.0.7",
    "publisher": "dandoozan",
    "icon": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/dandoozan/vscode-keyboard-shortcuts"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vks.selectString",
        "onCommand:vks.deleteString",
        "onCommand:vks.cutString",
        "onCommand:vks.copyString",
        "onCommand:vks.replaceString",
        "onCommand:vks.selectBlockInner"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vks.selectString",
                "title": "VKS: Select String"
            },
            {
                "command": "vks.deleteString",
                "title": "VKS: Delete String"
            },
            {
                "command": "vks.cutString",
                "title": "VKS: Cut String"
            },
            {
                "command": "vks.copyString",
                "title": "VKS: Copy String"
            },
            {
                "command": "vks.replaceString",
                "title": "VKS: Replace String"
            },

            {
                "command": "vks.selectBlockInner",
                "title": "VKS: Select Block Inner"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "updateAndInstall": "npm run bumpVersion && npm run createVsix && npm run installVsix",
        "bumpVersion": "npm --no-git-tag-version version patch",
        "createVsix": "vsce package",
        "installVsix": "code --install-extension $npm_package_name-$npm_package_version.vsix"
    },
    "devDependencies": {
        "@types/clipboardy": "^1.1.0",
        "@types/lodash": "^4.14.120",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "typescript": "^3.1.4",
        "vscode": "^1.1.25"
    },
    "dependencies": {
        "@babel/parser": "^7.2.3",
        "@babel/types": "^7.2.2",
        "clipboardy": "^1.2.3",
        "json-to-ast": "^2.1.0",
        "lodash": "^4.17.11"
    }
}
